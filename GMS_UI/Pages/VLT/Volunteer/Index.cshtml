@page
@model GMS_UI.Pages.VLT.Volunteer.IndexModel
@{
    ViewData["Title"] = "Volunteer";
}



<div class="container-gms">
    <div class="card">
        <div class="card-header page-card-header">
            <div class="row align-items-center">
                <div class="col">
                    <h4><i class="bi bi-people-fill me-2"></i>Volunteers</h4>
                </div>
                <div class="col text-end">
                    <a asp-page="./Create" class="btn btn-sm btn-add btn-header"><i class="bi bi-plus-circle me-1"></i> Add Volunteer</a>
                </div>
            </div>
        </div>
        <div class="card-body volunteer-grid-container">
            <div id="volunteerGrid" class="ag-theme-balham gridIndexSize"></div>
        </div>
    </div>
</div>

<!-- Volunteer History Modal -->
<div class="modal fade" id="volunteerHistoryModal" tabindex="-1" aria-labelledby="volunteerHistoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header page-card-header">
                <h5 class="modal-title" id="volunteerHistoryModalLabel">
                    <i class="bi bi-clock-history"></i> Volunteer History: <span id="volunteerHistoryName"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Studies Section -->
                <div class="mb-4">
                    <h6 class="border-bottom pb-2"><i class="bi bi-journal-medical"></i> Studies</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Volunteer Name</th>
                                    <th>Study Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Random Code</th>
                                    <th>Random Date</th>
                                </tr>
                            </thead>
                            <tbody id="historyStudiesBody">
                                <tr><td colspan="6" class="text-center">Loading...</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Selections Section -->
                <div>
                    <h6 class="border-bottom pb-2"><i class="bi bi-check2-square"></i> Pre-Assigned Selections</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Volunteer Name</th>
                                    <th>Study Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Pre-Assigned Date</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody id="historySelectionsBody">
                                <tr><td colspan="6" class="text-center">Loading...</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Pre-Assign to Study Modal -->
<div id="preAssignModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="preAssignModalLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header page-card-header">
                <h5 class="modal-title" id="preAssignModalLabel">
                    <i class="bi bi-person-plus me-2"></i>Pre-Assign Volunteer to Study
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">Volunteer Name:</label>
                    <p id="preAssignVolunteerName" class="form-control-plaintext"></p>
                </div>
                <div class="mb-3">
                    <label for="preAssignStudyId" class="form-label fw-bold">Study: <span class="text-danger">*</span></label>
                    <select id="preAssignStudyId" class="form-select" required>
                        <option value="">-- Select Study --</option>
                        @foreach (var study in Model.StudyList)
                        {
                            <option value="@study.Value">@study.Text</option>
                        }
                    </select>
                </div>
                <input type="hidden" id="preAssignVolunteerId" />
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </button>
                <button class="btn btn-sm btn-success" onclick="assignVolunteerToStudy()">
                    <i class="bi bi-person-plus me-1"></i> Pre-Assign
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Add CSRF token to form -->
<form method="post">
    @Html.AntiForgeryToken()
</form>

<script>
    window._csrfToken = $('@Html.AntiForgeryToken()').val();
    urlIndex = '/VLT/Volunteer';
</script>
<script src="/js/vlt/volunteer/volunteer.js"></script>
