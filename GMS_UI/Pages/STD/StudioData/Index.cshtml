@page
@model GMS_UI.Pages.STD.StudioData.IndexModel
@{
    ViewData["Title"] = "Clinical Study Wizard";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<div class="container my-4">
    <h1 class="h3 mb-3">Clinical Study Wizard</h1>

    <div id="wizard" class="card shadow-sm">
        <div class="card-header bg-light">
            <ul class="nav nav-pills card-header-pills gap-2" id="wizardSteps">
                <li class="nav-item"><button class="btn btn-outline-primary" data-step="1" type="button">1. General</button></li>
                <li class="nav-item"><button class="btn btn-outline-secondary" data-step="2" type="button">2. Protocol</button></li>
                <li class="nav-item"><button class="btn btn-outline-secondary" data-step="3" type="button">3. Monitor</button></li>
                <li class="nav-item"><button class="btn btn-outline-secondary" data-step="4" type="button">4. Visits & Procedures</button></li>
            </ul>
        </div>
        <div class="card-body">
            <form method="post" id="studyWizardForm" novalidate>
                <section class="wizard-step" data-step="1">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Study Title</label>
                            <input class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Study Code</label>
                            <input class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Phase</label>
                            <select class="form-select">
                                <option value="">-- Select --</option>
                                <option>Phase I</option>
                                <option>Phase II</option>
                                <option>Phase III</option>
                                <option>Phase IV</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Sponsor</label>
                            <div class="input-group">
                                <select class="form-select" id="sponsorSelect">
                                    <option value="1">Test Sponsor Co.</option>
                                </select>
                                <button class="btn btn-outline-success" type="button">Add</button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Start Date</label>
                            <input type="date" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">End Date</label>
                            <input type="date" class="form-control" />
                        </div>
                    </div>
                </section>

                <section class="wizard-step d-none" data-step="2">
                    <div class="row g-3">
                        <div class="col-md-5">
                            <label class="form-label">Protocol</label>
                            <div class="input-group">
                                <select class="form-select" id="protocolSelect"></select>
                                <button class="btn btn-outline-success" type="button">Add</button>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Version</label>
                            <input class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">IRB Approval Date</label>
                            <input type="date" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Notes</label>
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </section>

                <section class="wizard-step d-none" data-step="3">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Monitor</label>
                            <div class="input-group">
                                <select class="form-select" id="monitorSelect"></select>
                                <button class="btn btn-outline-success" type="button">Add</button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Notes</label>
                            <input class="form-control" />
                        </div>
                    </div>
                </section>

                <section class="wizard-step d-none" data-step="4">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h2 class="h5 m-0">Visit Schedule</h2>
                                <button type="button" class="btn btn-sm btn-primary" id="addVisitBtn">Add Visit</button>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-sm align-middle" id="visitsTable">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Window (days)</th>
                                            <th>Day Offset</th>
                                            <th>Procedures</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>

                <hr />

                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-secondary" id="prevBtn">Back</button>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-outline-primary" id="nextBtn">Next</button>
                        <button type="submit" class="btn btn-success d-none" id="finishBtn">Finish</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Modals remain unchanged -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="/js/std/studioData/studioData.js"></script>


<script>
    window._csrfToken = $('@Html.AntiForgeryToken()').val();
    urlIndex = '/STD/StudioData';
</script>