@page
@model GMS_UI.Pages.STD.Sponsor.IndexModel
@{
    ViewData["Title"] = "Sponsor";
}

<div class="container-gms">

    <div class="alert alert-success collapse" role="alert" id="successAlert">
        <button type="button" class="btn-close float-end" onclick="hideAlerts('successAlert')" aria-label="Close"></button>
        <h4 class="alert-heading" id="successTitle"></h4>
        <p id="successMsg"></p>
    </div>

    <div class="alert alert-danger collapse" role="alert" id="failedAlert">
        <button type="button" class="btn-close float-end" onclick="hideAlerts('failedAlert')" aria-label="Close"></button>
        <h4 class="alert-heading" id="failedTitle"></h4>
        <p id="failedMsg"></p>
    </div>

    <div class="card sponsor-card">
        <div class="card-header sponsor-header">
            <div class="row align-items-center">
                <div class="col">
                    <h4><i class="bi bi-building me-2"></i>Sponsor</h4>
                </div>
                <div class="col text-end">
                    <button data-bs-toggle="modal" data-bs-target="#sponsorNewModal" class="btn btn-sm btn-add"><i class="bi bi-plus-circle me-1"></i> Add Sponsor</button>
                </div>
            </div>
        </div>
        <div class="card-body sponsor-grid-container">
            <div id="sponsorGrid" class="ag-theme-balham gridIndexSize"></div>
        </div>
    </div>
</div>
 <div id="sponsorNewModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="sponsorNewModalLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" role="document">
            <div class="modal-header page-card-header">
                <h2>Add Sponsor</h2>
                <span class="close" data-bs-dismiss="modal">&times;</span>
            </div>
            <div class="modal-body">
                <div class="form-group position-relative">
                    <label class="floating-label" for="sponsorName">Sponsor</label>
                    <input type="text" class="form-control pt-4" id="sponsorName" placeholder="Sponsor">
                    <span id="validateSponsor" class="text-danger"></span>
                </div>
                <div class="form-group position-relative mb-3">
                    <label class="floating-label" for="sponsorType">Sponsor Type</label>
                    <select class="form-select" aria-label="Default select example" id="sponsorType">
                        <option selected>Open this select menu</option>
                    </select>
                    <span id="validateSponsorType" class="text-danger"></span>
                </div>
                 <div class="form-group position-relative">
                    <label class="floating-label" for="contactName">Contact Name</label>
                    <input type="text" class="form-control pt-4" id="contactName" placeholder="Contact Name">

                </div>   
                 <div class="form-group position-relative">
                    <label class="floating-label" for="contactEmail">Contact Email</label>
                    <input type="text" class="form-control pt-4" id="contactEmail" placeholder="Contact Email">

                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="contactPhone">Contact Phone</label>
                    <input type="text" class="form-control pt-4" id="contactPhone" placeholder="Contact Phone">

                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-success" onclick="crudSponsor(1)"> Save</button>
            </div>
        </div>
    </div>
</div>

<div id="editSponsor" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="editSponsorLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" role="document">
            <div class="modal-header page-card-header">
                <h2>Edit Sponsor</h2>
                <span class="close" data-bs-dismiss="modal">&times;</span>
            </div>
            <div class="modal-body">
                <div class="form-group position-relative">
                    <label class="floating-label" for="sponsorNameEdit">Sponsor</label>
                    <input type="text" class="form-control pt-4" id="sponsorNameEdit" placeholder="Sponsor">
                    <span id="validateSponsorEdit" class="text-danger"></span>
                </div>
                <div class="form-group position-relative mb-3">
                    <label class="floating-label" for="sponsorTypeEdit">Sponsor Type</label>
                    <select class="form-select" aria-label="Default select example" id="sponsorTypeEdit">
                        <option selected>Open this select menu</option>
                    </select>
                    <span id="validateSponsorTypeEdit" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="contactNameEdit">Contact Name</label>
                    <input type="text" class="form-control pt-4" id="contactNameEdit" placeholder="Contact Name">

                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="contactEmailEdit">Contact Email</label>
                    <input type="text" class="form-control pt-4" id="contactEmailEdit" placeholder="Contact Email">

                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="contactPhoneEdit">Contact Phone</label>
                    <input type="text" class="form-control pt-4" id="contactPhoneEdit" placeholder="Contact Phone">

                </div>
                <input type="hidden" id="sponsoridEdit" />
                <input type="hidden" id="sponsorTypeIdEdit" />
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-success" onclick="crudSponsor(2)"> Save</button>
            </div>
        </div>
    </div>
</div>

<div id="deleteSponsor" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteSponsorLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" role="document">
            <div class="modal-header page-card-header">
                <h2>Are you sure you want to delete this sponsor?</h2>
                <span class="close" data-bs-dismiss="modal">&times;</span>
                <input type="hidden" id="sponsoridDelete" />
            </div>
            <div class="modal-body">
                <div class="row">
                    <dl class="row">
                        <dt class="col-sm-6"> Sponsor Name: </dt>
                        <dd class="col-sm-6" id="nameD"> </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-6"> Sponsor Type:</dt>
                        <dd class="col-sm-6" id="typeD">  </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-6"> Contact Name:  </dt>
                        <dd class="col-sm-6" id="contactNameD">         </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-6"> Contact Email:  </dt>
                        <dd class="col-sm-6" id="contactEmailD">         </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-6"> Contact Phone:  </dt>
                        <dd class="col-sm-6" id="contactPhoneD">         </dd>
                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-outline-danger" onclick="crudSponsor(3)"><i class="bi bi-x-octagon-fill"></i> Delete</button>
            </div>
        </div>
    </div>  
</div> 

<script>
    window._csrfToken = $('@Html.AntiForgeryToken()').val();
    urlIndex = '/STD/Sponsor';
    urlIndexCMN = '/CMN/ReferenceData';
</script>
<script src="/js/std/sponsor/sponsor.js"></script>