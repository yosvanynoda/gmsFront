@page
@model GMS_UI.Pages.STD.StudioDoc.IndexModel
@{
    ViewData["Title"] = "StudioDoc";
}

<style>
    .studiodoc-header {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        color: white;
        border-radius: 10px 10px 0 0 !important;
        padding: 1.5rem;
        border: none !important;
    }

    .studiodoc-header h4 {
        font-weight: 600;
        margin-bottom: 0;
    }

    .studiodoc-card {
        border-radius: 10px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        border: none;
        overflow: hidden;
        height: 90vh;
    }

    .studiodoc-grid-container {
        height: calc(100% - 2rem);
        padding: 1rem;
        background: #f9fafb;
    }

    #studioDocGrid {
        height: 100%;
        width: 100%;
    }

    .ag-theme-balham .ag-header {
        background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
        border-bottom: 2px solid #5f9ea0;
        font-weight: 600;
    }

    .ag-theme-balham .ag-row:hover {
        background-color: #e8f4f5 !important;
    }

    .ag-theme-balham .ag-row-selected {
        background-color: #d4e9ea !important;
    }

    .btn-add {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        border: none;
        color: white;
        font-weight: 500;
        box-shadow: 0 2px 4px rgba(95, 158, 160, 0.2);
        transition: all 0.3s ease;
    }

    .btn-add:hover {
        background: linear-gradient(135deg, #5f9ea0 0%, #4a7a7c 100%);
        color: white;
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(95, 158, 160, 0.3);
    }

    .btn-success {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        border: none;
        font-weight: 500;
        box-shadow: 0 2px 4px rgba(95, 158, 160, 0.2);
        transition: all 0.3s ease;
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #5f9ea0 0%, #4a7a7c 100%);
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(95, 158, 160, 0.3);
    }

    .modal-header {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        color: white;
        border-bottom: none;
    }

    .modal-header h2 {
        color: white;
        font-weight: 600;
        font-size: 1.5rem;
        margin: 0;
    }

    .modal-header .close {
        color: white;
        opacity: 0.9;
        font-size: 1.5rem;
        cursor: pointer;
        background: none;
        border: none;
    }

    .modal-header .close:hover {
        opacity: 1;
    }
</style>

<div class="container-gms">

    <div class="alert alert-success collapse" role="alert" id="successAlert">
        <button type="button" class="btn-close float-end" onclick="hideAlerts('successAlert')" aria-label="Close"></button>
        <h4 class="alert-heading" id="successTitle"></h4>
        <p id="successMsg"></p>
    </div>

    <div class="alert alert-danger collapse" role="alert" id="failedAlert">
        <button type="button" class="btn-close float-end" onclick="hideAlerts('failedAlert')" aria-label="Close"></button>
        <h4 class="alert-heading" id="failedTitle"></h4>
        <p id="failedMsg"></p>
    </div>

    <div class="card studiodoc-card">
        <div class="card-header studiodoc-header">
            <div class="row align-items-center">
                <div class="col">
                    <h4><i class="bi bi-file-earmark-medical-fill me-2"></i>Studio Doc</h4>
                </div>
                <div class="col text-end">
                    <button data-bs-toggle="modal" data-bs-target="#studioDocNewModal" class="btn btn-sm btn-add"><i class="bi bi-plus-circle me-1"></i> Add Studio Doc</button>
                </div>
            </div>
        </div>
        <div class="card-body studiodoc-grid-container">
            <div id="studioDocGrid" class="ag-theme-balham"></div>
        </div>
    </div>
</div>
<div id="studioDocNewModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="studioDocNewModalLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" role="document">
            <div class="modal-header">
                <h2>Add Studio Doc</h2>
                <span class="close" data-bs-dismiss="modal">&times;</span>
            </div>
            <div class="modal-body">
                <div class="form-group position-relative">
                    <label class="floating-label" for="docName">DocName</label>
                    <input type="text" class="form-control pt-4" id="docName" placeholder="DocName">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="docType">DocType</label>
                    <input type="text" class="form-control pt-4" id="docType" placeholder="DocType">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="docVersion">DocVersion</label>
                    <input type="text" class="form-control pt-4" id="docVersion" placeholder="DocVersion">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="docDate">DocDate</label>
                    <input type="text" class="form-control pt-4" id="docDate" placeholder="DocDate">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="studioName">StudioName</label>
                    <input type="text" class="form-control pt-4" id="studioName" placeholder="StudioName">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="notes">Notes</label>
                    <input type="text" class="form-control pt-4" id="notes" placeholder="Notes">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-success" onclick="crudStudioDoc(1)"> Save</button>
            </div>
        </div>
    </div>
</div>
<div id="editStudioDoc" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="editStudioDocLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" role="document">
            <div class="modal-header">
                <h2>Edit Studio Doc</h2>
                <span class="close" data-bs-dismiss="modal">&times;</span>
            </div>
            <div class="modal-body">
                <div class="form-group position-relative">
                    <label class="floating-label" for="docName">DocName</label>
                    <input type="text" class="form-control pt-4" id="docNameEdit" placeholder="DocName">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="docType">DocType</label>
                    <input type="text" class="form-control pt-4" id="docTypeEdit" placeholder="DocType">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="docVersion">DocVersion</label>
                    <input type="text" class="form-control pt-4" id="docVersionEdit" placeholder="DocVersion">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="docDate">DocDate</label>
                    <input type="text" class="form-control pt-4" id="docDateEdit" placeholder="DocDate">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="studioName">StudioName</label>
                    <input type="text" class="form-control pt-4" id="studioNameEdit" placeholder="StudioName">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label class="floating-label" for="notes">Notes</label>
                    <input type="text" class="form-control pt-4" id="notesEdit" placeholder="Notes">
                    <span id="validateStudioDoc" class="text-danger"></span>
                </div>

                <input type="hidden" id="studioDocidEdit" />
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-success" onclick="crudStudioDoc(2)"> Save</button>
            </div>
        </div>
    </div>
</div>
<div id="deleteStudioDoc" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteStudioDocLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" role="document">
            <div class="modal-header">
                <h2>Are you sure you want to delete this studio doc?</h2>
                <span class="close" data-bs-dismiss="modal">&times;</span>
                <input type="hidden" id="studioDocidDelete" />
            </div>
            <div class="modal-body">
                <div class="row">
                    <dl class="row">
                        <dt class="col-sm-6">DocName: </dt>
                        <dd class="col-sm-6" id="docNameD"> </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-6">DocType:</dt>
                        <dd class="col-sm-6" id="docTypeD">  </dd>
                    </dl>                  
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-danger" onclick="crudStudioDoc(3)"><i class="bi bi-x-octagon-fill"></i> Delete</button>
            </div>
        </div>
    </div>
    <script>
        window._csrfToken = $('@Html.AntiForgeryToken()').val();
        urlIndex = '/STD/StudioDoc';
    </script>
    <script src="/js/std/studioDoc/studioDoc.js"></script>

