@page
@model GMS_UI.Pages.STD.StudioListData.IndexModel
@{
    ViewData["Title"] = "StudioList";
}

<style>
    .studiolist-header {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        color: white;
        border-radius: 10px 10px 0 0 !important;
        padding: 1.5rem;
        border: none !important;
    }

    .studiolist-header h4 {
        font-weight: 600;
        margin-bottom: 0;
    }

    .studiolist-card {
        border-radius: 10px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        border: none;
        overflow: hidden;
        height: 90vh;
    }

    .studiolist-grid-container {
        height: calc(100% - 2rem);
        padding: 1rem;
        background: #f9fafb;
    }

    #studioListGrid {
        height: 100%;
        width: 100%;
    }

    .ag-theme-balham .ag-header {
        background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
        border-bottom: 2px solid #5f9ea0;
        font-weight: 600;
    }

    .ag-theme-balham .ag-row:hover {
        background-color: #e8f4f5 !important;
    }

    .ag-theme-balham .ag-row-selected {
        background-color: #d4e9ea !important;
    }

    .btn-add {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        border: none;
        color: white;
        font-weight: 500;
        box-shadow: 0 2px 4px rgba(95, 158, 160, 0.2);
        transition: all 0.3s ease;
    }

    .btn-add:hover {
        background: linear-gradient(135deg, #5f9ea0 0%, #4a7a7c 100%);
        color: white;
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(95, 158, 160, 0.3);
    }
</style>

<div class="container-gms">

    <div class="alert alert-success collapse" role="alert" id="successAlert">
        <button type="button" class="btn-close float-end" onclick="hideAlerts('successAlert')" aria-label="Close"></button>
        <h4 class="alert-heading" id="successTitle"></h4>
        <p id="successMsg"></p>
    </div>

    <div class="alert alert-danger collapse" role="alert" id="failedAlert">
        <button type="button" class="btn-close float-end" onclick="hideAlerts('failedAlert')" aria-label="Close"></button>
        <h4 class="alert-heading" id="failedTitle"></h4>
        <p id="failedMsg"></p>
    </div>

    <div class="card studiolist-card">
        <div class="card-header studiolist-header">
            <div class="row align-items-center">
                <div class="col">
                    <h4><i class="bi bi-journal-medical me-2"></i>Clinical Studies</h4>
                </div>
                <div class="col text-end">
                    <a class="btn btn-sm btn-add" href="./Create"><i class="bi bi-plus-circle me-1"></i> Add Study</a>
                </div>
            </div>
        </div>
        <div class="card-body studiolist-grid-container">
            <div id="studioListGrid" class="ag-theme-balham"></div>
        </div>
    </div>
</div>

    <script>
        window._csrfToken = $('@Html.AntiForgeryToken()').val();
        urlIndex = '/STD/StudioListData';
    </script>
    <script src="/js/std/studioListData/studioListData.js"></script>

