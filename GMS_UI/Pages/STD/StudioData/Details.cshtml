@* @page
@model GMS_UI.Pages.STD.StudioData.IndexModel
@{
    ViewData["Title"] = "Clinical Study Wizard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<div class="container my-4">
    <h1 class="h3 mb-3">Clinical Study Wizard</h1>

    <div id="wizard" class="card shadow-sm">
        <div class="card-header bg-light">
            <ul class="nav nav-pills card-header-pills gap-2" id="wizardSteps">
                <li class="nav-item"><button class="btn btn-outline-primary" data-step="1">1. General</button></li>
                <li class="nav-item"><button class="btn btn-outline-secondary" data-step="2">2. Protocol</button></li>
                <li class="nav-item"><button class="btn btn-outline-secondary" data-step="3">3. Monitor</button></li>
                <li class="nav-item"><button class="btn btn-outline-secondary" data-step="4">4. Visits & Procedures</button></li>
            </ul>
        </div>
        <div class="card-body">
            <form method="post" id="studyWizardForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <!-- STEP 1: GENERAL -->
                <section class="wizard-step" data-step="1">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Vm.General.Title" class="form-label"></label>
                            <input asp-for="Vm.General.Title" class="form-control" />
                            <span asp-validation-for="Vm.General.Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Vm.General.Code" class="form-label"></label>
                            <input asp-for="Vm.General.Code" class="form-control" />
                            <span asp-validation-for="Vm.General.Code" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Vm.General.Phase" class="form-label"></label>
                            <select asp-for="Vm.General.Phase" class="form-select">
                                <option value="">-- Select --</option>
                                <option>Phase I</option>
                                <option>Phase II</option>
                                <option>Phase III</option>
                                <option>Phase IV</option>
                            </select>
                            <span asp-validation-for="Vm.General.Phase" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Vm.General.SponsorId" class="form-label">Sponsor</label>
                            <div class="input-group">
                                <select asp-for="Vm.General.SponsorId" class="form-select" id="sponsorSelect"></select>
                                <button class="btn btn-outline-success" type="button" data-bs-toggle="modal" data-bs-target="#addSponsorModal">Add</button>
                                <option value="1">Test Sponsor Co.</option>
                            </div>
                            <span asp-validation-for="Vm.General.SponsorId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Vm.General.StartDate" class="form-label"></label>
                            <input asp-for="Vm.General.StartDate" type="date" class="form-control" />
                            <span asp-validation-for="Vm.General.StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Vm.General.EndDate" class="form-label"></label>
                            <input asp-for="Vm.General.EndDate" type="date" class="form-control" />
                            <span asp-validation-for="Vm.General.EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </section>

                <!-- STEP 2: PROTOCOL -->
                <section class="wizard-step d-none" data-step="2">
                    <div class="row g-3">
                        <div class="col-md-5">
                            <label asp-for="Vm.Protocol.ProtocolId" class="form-label">Protocol</label>
                            <div class="input-group">
                                <select asp-for="Vm.Protocol.ProtocolId" class="form-select" id="protocolSelect"></select>
                                <button class="btn btn-outline-success" type="button" data-bs-toggle="modal" data-bs-target="#addProtocolModal">Add</button>
                            </div>
                            <span asp-validation-for="Vm.Protocol.ProtocolId" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Vm.Protocol.Version" class="form-label"></label>
                            <input asp-for="Vm.Protocol.Version" class="form-control" />
                            <span asp-validation-for="Vm.Protocol.Version" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Vm.Protocol.IRBApprovalDate" class="form-label"></label>
                            <input asp-for="Vm.Protocol.IRBApprovalDate" type="date" class="form-control" />
                            <span asp-validation-for="Vm.Protocol.IRBApprovalDate" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Vm.Protocol.Notes" class="form-label"></label>
                            <textarea asp-for="Vm.Protocol.Notes" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </section>

                <!-- STEP 3: MONITOR -->
                <section class="wizard-step d-none" data-step="3">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Vm.Monitor.MonitorId" class="form-label">Monitor</label>
                            <div class="input-group">
                                <select asp-for="Vm.Monitor.MonitorId" class="form-select" id="monitorSelect"></select>
                                <button class="btn btn-outline-success" type="button" data-bs-toggle="modal" data-bs-target="#addMonitorModal">Add</button>
                            </div>
                            <span asp-validation-for="Vm.Monitor.MonitorId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Vm.Monitor.Notes" class="form-label"></label>
                            <input asp-for="Vm.Monitor.Notes" class="form-control" />
                        </div>
                    </div>
                </section>

                <!-- STEP 4: VISITS & PROCEDURES -->
                <section class="wizard-step d-none" data-step="4">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h2 class="h5 m-0">Visit Schedule</h2>
                                <button type="button" class="btn btn-sm btn-primary" id="addVisitBtn">Add Visit</button>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-sm align-middle" id="visitsTable">
                                    <thead>
                                        <tr>
                                            <th style="width: 20%">Name</th>
                                            <th style="width: 15%">Window (days)</th>
                                            <th style="width: 15%">Day Offset</th>
                                            <th>Procedures</th>
                                            <th style="width: 10%"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (var i = 0; i < Model.Vm.Visits.Count; i++)
                                        {
                                            <tr data-index="@i">
                                                <td>
                                                    <input class="form-control" name="Vm.Visits[@i].Name" value="@Model.Vm.Visits[i].Name" />
                                                </td>
                                                <td>
                                                    <input class="form-control" type="number" name="Vm.Visits[@i].WindowDays" value="@Model.Vm.Visits[i].WindowDays" />
                                                </td>
                                                <td>
                                                    <input class="form-control" type="number" name="Vm.Visits[@i].DayOffset" value="@Model.Vm.Visits[i].DayOffset" />
                                                </td>
                                                <td>
                                                    <div class="input-group">
                                                        <input class="form-control procedure-input" name="Vm.Visits[@i].ProcedureCsv" value="@Model.Vm.Visits[i].ProcedureCsv" placeholder="Comma-separated" />
                                                        <button type="button" class="btn btn-outline-secondary btn-sm open-proc-modal" data-row="@i" data-bs-toggle="modal" data-bs-target="#procedureModal">Pick</button>
                                                    </div>
                                                </td>
                                                <td class="text-end">
                                                    <button type="button" class="btn btn-sm btn-outline-danger remove-visit">Remove</button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>

                <hr />

                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-secondary" id="prevBtn">Back</button>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-outline-primary" id="nextBtn">Next</button>
                        <button type="submit" class="btn btn-success d-none" id="finishBtn">Finish</button>
                    </div>
                </div>

                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>

<!-- MODALS: Add Sponsor / Protocol / Monitor -->

<div class="modal fade" id="addSponsorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Add Sponsor</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <div class="mb-2">
                    <label class="form-label">Name</label>
                    <input class="form-control" id="newSponsorName" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Email</label>
                    <input class="form-control" id="newSponsorEmail" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveSponsorBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addProtocolModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Add Protocol</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <div class="mb-2">
                    <label class="form-label">Code</label>
                    <input class="form-control" id="newProtocolCode" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Version</label>
                    <input class="form-control" id="newProtocolVersion" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveProtocolBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addMonitorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Add Monitor</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <div class="mb-2">
                    <label class="form-label">Full Name</label>
                    <input class="form-control" id="newMonitorName" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Email</label>
                    <input class="form-control" id="newMonitorEmail" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveMonitorBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Procedures Picker Modal -->
<div class="modal fade" id="procedureModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Select Procedures</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <div class="input-group mb-2">
                    <input type="text" class="form-control" id="procSearch" placeholder="Search procedure...">
                    <button class="btn btn-outline-secondary" id="procSearchBtn" type="button">Search</button>
                </div>
                <div class="table-responsive" style="max-height: 320px; overflow:auto">
                    <table class="table table-hover" id="procedurePickerTable">
                        <thead><tr><th>Code</th><th>Name</th><th style="width: 10%">Add</th></tr></thead>
                        <tbody><!-- filled by JS --></tbody>
                    </table>
                </div>
                <hr />
                <div>
                    <label class="form-label">Selected</label>
                    <input id="selectedProcedures" class="form-control" readonly />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="applyProceduresBtn">Apply</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="/js/std/studioDoc/studioData.js"></script>


<script>
    window._csrfToken = $('@Html.AntiForgeryToken()').val();
    urlIndex = '/STD/StudioData';
</script>


