@page
@model GMS_UI.Pages.VLT.Volunteer.FilterModel
@{
    ViewData["Title"] = "Volunteer Filter & Pre-Assignment";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ag-grid-community@31.0.0/styles/ag-grid.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ag-grid-community@31.0.0/styles/ag-theme-alpine.css" />
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

<style>
    .filter-header {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        color: white;
        border-radius: 10px 10px 0 0 !important;
        padding: 1.5rem;
        border: none !important;
    }

    .filter-header h3 {
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 1.5rem;
    }

    .filter-header p {
        opacity: 0.9;
        font-size: 0.9rem;
        margin-bottom: 0 !important;
    }

    .filter-card {
        border-radius: 10px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        border: none;
        overflow: hidden;
    }

    .btn-primary {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        border: none;
        font-weight: 500;
        box-shadow: 0 2px 4px rgba(95, 158, 160, 0.2);
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #5f9ea0 0%, #4a7a7c 100%);
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(95, 158, 160, 0.3);
    }

    .btn-success {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        border: none;
        font-weight: 500;
        box-shadow: 0 2px 4px rgba(95, 158, 160, 0.2);
        transition: all 0.3s ease;
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #5f9ea0 0%, #4a7a7c 100%);
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(95, 158, 160, 0.3);
    }

    .results-card-header {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        color: white;
        padding: 1rem;
    }

    .ag-theme-alpine .ag-header {
        border-bottom: 2px solid #5f9ea0;
    }

    .ag-theme-alpine .ag-row:hover {
        background-color: #e8f4f5 !important;
    }

    .ag-theme-alpine .ag-row-selected {
        background-color: #d4e9ea !important;
    }
</style>

<div class="container-gms">
    <div class="card filter-card">
        <div class="card-header filter-header">
            <h3><i class="bi bi-funnel-fill me-2"></i>Volunteer Filter & Pre-Assignment</h3>
            <p class="text-white mb-0">Search for volunteers matching study criteria and pre-assign candidates to studies</p>
        </div>
        <div class="card-body">
            <!-- Filter Form -->
            <form id="filterForm">
                <div class="row mb-3">
                    <!-- Study -->
                    <div class="col-md-6">
                        <label for="studyId" class="form-label">Study <span class="text-danger">*</span></label>
                        <select id="studyId" name="studyId" class="form-select" required>
                            <option value="">-- Select Study --</option>
                            @foreach (var study in Model.StudyList)
                            {
                                <option value="@study.Value">@study.Text</option>
                            }
                        </select>
                        <small class="text-muted">Required for pre-assignment</small>
                    </div>

                    <!-- Exclude Already Assigned -->
                    <div class="col-md-6">
                        <label class="form-label">Options</label>
                        <div class="form-check">
                            <input type="checkbox" id="excludeAlreadyAssigned" name="excludeAlreadyAssigned" class="form-check-input" checked>
                            <label for="excludeAlreadyAssigned" class="form-check-label">Exclude volunteers already assigned to this study</label>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Age Range -->
                    <div class="col-md-3">
                        <label for="minAge" class="form-label">Min Age:</label>
                        <input type="number" id="minAge" name="minAge" class="form-control" min="0" max="120" placeholder="e.g. 18">
                    </div>

                    <div class="col-md-3">
                        <label for="maxAge" class="form-label">Max Age:</label>
                        <input type="number" id="maxAge" name="maxAge" class="form-control" min="0" max="120" placeholder="e.g. 65">
                    </div>

                    <!-- Gender -->
                    <div class="col-md-3">
                        <label for="genderId" class="form-label">Gender:</label>
                        <select id="genderId" name="genderId" class="form-select" multiple>
                            @foreach (var gender in Model.GenderList)
                            {
                                <option value="@gender.Value">@gender.Text</option>
                            }
                        </select>
                    </div>

                    <!-- Race -->
                    <div class="col-md-3">
                        <label for="raceId" class="form-label">Race:</label>
                        <select id="raceId" name="raceId" class="form-select" multiple>
                            @foreach (var race in Model.RaceList)
                            {
                                <option value="@race.Value">@race.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Ethnicity -->
                    <div class="col-md-3">
                        <label for="ethnicityId" class="form-label">Ethnicity:</label>
                        <select id="ethnicityId" name="ethnicityId" class="form-select" multiple>
                            @foreach (var ethnicity in Model.EthnicityList)
                            {
                                <option value="@ethnicity.Value">@ethnicity.Text</option>
                            }
                        </select>
                    </div>

                    <!-- Language -->
                    <div class="col-md-3">
                        <label for="languageId" class="form-label">Language:</label>
                        <select id="languageId" name="languageId" class="form-select" multiple>
                            @foreach (var language in Model.LanguageList)
                            {
                                <option value="@language.Value">@language.Text</option>
                            }
                        </select>
                    </div>

                    <!-- Disease -->
                    <div class="col-md-3">
                        <label for="diseaseId" class="form-label">Disease:</label>
                        <select id="diseaseId" name="diseaseId" class="form-select" multiple>
                            @foreach (var disease in Model.DiseaseList)
                            {
                                <option value="@disease.Value">@disease.Text</option>
                            }
                        </select>
                        <div class="form-check mt-2">
                            <input type="checkbox" id="healthyPerson" name="healthyPerson" class="form-check-input">
                            <label for="healthyPerson" class="form-check-label">Healthy Person (No Diseases)</label>
                        </div>
                    </div>

                    <!-- Current Status -->
                    <div class="col-md-3">
                        <label for="currentStatus" class="form-label">Current Status:</label>
                        <select id="currentStatus" name="currentStatus" class="form-select">
                            <option value="">-- All --</option>
                            @foreach (var status in Model.VLTStatusList)
                            {
                                <option value="@status.Text">@status.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <button type="button" id="searchBtn" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search Volunteers
                        </button>
                        <button type="button" id="clearBtn" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Clear Filters
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Section -->
    <div class="card filter-card mt-4" id="resultsSection" style="display: none;">
        <div class="card-header results-card-header d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Search Results</h5>
                <small class="text-white opacity-75" id="resultsCount">0 volunteers found</small>
            </div>
            <div>
                <button type="button" id="preAssignBtn" class="btn btn-light" disabled>
                    <i class="bi bi-person-plus"></i> Pre-Assign Selected to Study
                </button>
            </div>
        </div>
        <div class="card-body">
            <div id="volunteersGrid" class="ag-theme-alpine" style="height: 500px; width: 100%;"></div>
        </div>
    </div>
</div>

<!-- Add CSRF token to form -->
<form method="post">
    @Html.AntiForgeryToken()
</form>

<script src="https://cdn.jsdelivr.net/npm/ag-grid-community@31.0.0/dist/ag-grid-community.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="~/js/vlt/volunteer/volunteerFilter.js"></script>