@page
@model GMS_UI.Pages.VLT.Volunteer.IndexModel
@{
    ViewData["Title"] = "Volunteer";
}

<style>
    .volunteer-header {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        color: white;
        border-radius: 10px 10px 0 0 !important;
        padding: 1.5rem;
        border: none !important;
    }

    .volunteer-header h4 {
        font-weight: 600;
        margin-bottom: 0;
    }

    .volunteer-card {
        border-radius: 10px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        border: none;
        overflow: hidden;
        height: 90vh;
    }

    .volunteer-grid-container {
        height: calc(100% - 2rem);
        padding: 1rem;
        background: #f9fafb;
    }

    #volunteerGrid {
        height: 100%;
        width: 100%;
    }

    /* AG-Grid customizations */
    .ag-theme-balham .ag-header {
        background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
        border-bottom: 2px solid #5f9ea0;
        font-weight: 600;
    }

    .ag-theme-balham .ag-row:hover {
        background-color: #e8f4f5 !important;
    }

    .ag-theme-balham .ag-row-selected {
        background-color: #d4e9ea !important;
    }

    .btn-add {
        background: linear-gradient(135deg, #7fb3b5 0%, #5f9ea0 100%);
        border: none;
        color: white;
        font-weight: 500;
        box-shadow: 0 2px 4px rgba(95, 158, 160, 0.2);
        transition: all 0.3s ease;
    }

    .btn-add:hover {
        background: linear-gradient(135deg, #5f9ea0 0%, #4a7a7c 100%);
        color: white;
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(95, 158, 160, 0.3);
    }
</style>

<div class="container-gms">
    <div class="card volunteer-card">
        <div class="card-header volunteer-header">
            <div class="row align-items-center">
                <div class="col">
                    <h4><i class="bi bi-people-fill me-2"></i>Volunteers</h4>
                </div>
                <div class="col text-end">
                    <a asp-page="./Create" class="btn btn-sm btn-add"><i class="bi bi-plus-circle me-1"></i> Add Volunteer</a>
                </div>
            </div>
        </div>
        <div class="card-body volunteer-grid-container">
            <div id="volunteerGrid" class="ag-theme-balham"></div>
        </div>
    </div>
</div>

<!-- Volunteer History Modal -->
<div class="modal fade" id="volunteerHistoryModal" tabindex="-1" aria-labelledby="volunteerHistoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="volunteerHistoryModalLabel">
                    <i class="bi bi-clock-history"></i> Volunteer History: <span id="volunteerHistoryName"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Studies Section -->
                <div class="mb-4">
                    <h6 class="border-bottom pb-2"><i class="bi bi-journal-medical"></i> Studies</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Volunteer Name</th>
                                    <th>Study Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Random Code</th>
                                    <th>Random Date</th>
                                </tr>
                            </thead>
                            <tbody id="historyStudiesBody">
                                <tr><td colspan="6" class="text-center">Loading...</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Selections Section -->
                <div>
                    <h6 class="border-bottom pb-2"><i class="bi bi-check2-square"></i> Pre-Assigned Selections</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Volunteer Name</th>
                                    <th>Study Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Pre-Assigned Date</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody id="historySelectionsBody">
                                <tr><td colspan="6" class="text-center">Loading...</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    window._csrfToken = $('@Html.AntiForgeryToken()').val();
    urlIndex = '/VLT/Volunteer';
</script>
<script src="/js/vlt/volunteer/volunteer.js"></script>
