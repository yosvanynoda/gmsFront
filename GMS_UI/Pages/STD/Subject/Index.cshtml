@page
@model GMS_UI.Pages.STD.Subject.IndexModel
@{
    ViewData["Title"] = "Subject";
}

<div class="container-gms">
    <div class="card subject-card">
        <div class="card-header subject-header">
            <div class="row align-items-center">
                <div class="col">
                    <h4><i class="bi bi-person-badge-fill me-2"></i>Subject</h4>
                </div>
                <div class="col text-end">
                    <a asp-page="./Create" class="btn btn-sm btn-success"><i class="bi bi-plus-circle me-1"></i> Add Subject</a>
                </div>
            </div>
        </div>
        <div class="card-body subject-grid-container">
            <div id="subjectGrid" class="ag-theme-balham"></div>
        </div>
    </div>
</div>

<script>
    window._csrfToken = $('@Html.AntiForgeryToken()').val();
    urlIndex = '/STD/Subject';
</script>
<script src="/js/std/subject/subject.js"></script>
