@page
@model GMS_UI.Pages.CMN.Staff.IndexModel
@{
    ViewData["Title"] = "Staff";
}

<div class="container-gms">

    <div class="alert alert-success collapse" role="alert" id="successAlert">
        <button type="button" class="btn-close float-end" onclick="hideAlerts('successAlert')" aria-label="Close"></button>
        <h4 class="alert-heading" id="successTitle"></h4>
        <p id="successMsg"></p>
    </div>

    <div class="alert alert-danger collapse" role="alert" id="failedAlert">
        <button type="button" class="btn-close float-end" onclick="hideAlerts('failedAlert')" aria-label="Close"></button>
        <h4 class="alert-heading" id="failedTitle"></h4>
        <p id="failedMsg"></p>
    </div>

    <div class="card">
        <div class="card-header page-card-header">
            <div class="row align-items-center">
                <div class="col">
                    <h4><i class="bi bi-people-fill me-2"></i>Staff</h4>
                </div>
                <div class="col text-end">
                    <a data-bs-toggle="modal" data-bs-target="#staffNewModal" class="btn btn-sm btn-add btn-header"><i class="bi bi-plus-circle me-1"></i> Add Staff</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div id="staffGrid" class="ag-theme-balham gridIndexSize"></div>
        </div>
    </div>
</div>


<div id="studyAssign" class="modal fade" tabindex="-1" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header page-card-header">
                <h2>Assign Study</h2>
                <span class="close" data-bs-dismiss="modal">&times;</span>
            </div>
            <div class="modal-body">
                <input type="text" placeholder="Coordinator Name">
                <input type="text" placeholder="Study">
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-outline-success" onclick="assingStudy()"> Save</button>
            </div>
        </div>
    </div>
    
</div>

<!-- Start Modals Create Edit and Delete Staff-->

<div id="staffNewModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="staffNewModalLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" role="document">
            <div class="modal-header page-card-header">
                <h2>Add Staff</h2>
                <span class="close" data-bs-dismiss="modal">&times;</span>
            </div>
            <div class="modal-body">
                <div class="form-section">
                    <div class="row">

                        <div class="col-6">
                            <div class="mb-3">
                                <label for="firstName">First Name</label>
                                <input type="text" class="form-control inputsmmodal" id="firstName" placeholder="First Name">
                                <span id="validateFirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="lastName">Last Name</label>
                                <input type="text" class="form-control inputsmmodal" id="lastName" placeholder="Last Name">
                                <span id="validateLastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input type="text" class="form-control inputsmmodal" id="email" placeholder="Email">
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="phone">Phone</label>
                                <input type="text" class="form-control inputsmmodal" id="phone" placeholder="Phone">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="position">Position</label>
                                <input type="text" class="form-control inputsmmodal" id="position" placeholder="Position">
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="department">Department</label>
                                <input type="text" class="form-control inputsmmodal" id="department" placeholder="Department">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="status">Status</label>
                                <input type="text" class="form-control inputsmmodal" id="status" placeholder="Status">
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-sm btn-outline-success" onclick="crudStaff(1)"> Save</button>
            </div>
        </div>
    </div>

</div>

<div id="editstaff" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="editstaffLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" role="document">
            <div class="modal-header page-card-header">
                <h2>Edit staff</h2>
                <span class="close" data-bs-dismiss="modal">&times;</span>
            </div>
            <div class="modal-body">
                <div class="form-section">
                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="firstNameEdit">First Name</label>
                                <input type="text" class="form-control inputsmmodal" id="firstNameEdit" placeholder="First Name">
                                <span id="validateFirstNameEdit" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="lastNameEdit">Last Name</label>
                                <input type="text" class="form-control inputsmmodal" id="lastNameEdit" placeholder="Last Name">
                                <span id="validateLastNameEdit" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="emailEdit">Email</label>
                                <input type="text" class="form-control inputsmmodal" id="emailEdit" placeholder="Email">
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="phoneEdit">Phone</label>
                                <input type="text" class="form-control inputsmmodal" id="phoneEdit" placeholder="Phone">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="positionEdit">Position</label>
                                <input type="text" class="form-control inputsmmodal" id="positionEdit" placeholder="Position">
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="departmentEdit">Department</label>
                                <input type="text" class="form-control inputsmmodal" id="departmentEdit" placeholder="Department">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label class="form-label" for="statusEdit">Status</label>
                                <input type="text" class="form-control inputsmmodal" id="statusEdit" placeholder="Status">
                            </div>
                        </div>
                    </div>
                </div>
                
                <input type="hidden" id="staffIdEdit" />
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-outline-success" onclick="crudStaff(2)"> Save</button>
            </div>
        </div>
    </div>

</div>

<div id="deletestaff" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deletestaffLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" role="document">
            <div class="modal-header page-card-header">
                <h2>Are you sure you want to delete this staff?</h2>
                <span class="close" data-bs-dismiss="modal">&times;</span>
                <input type="hidden" id="staffIdDelete" />
            </div>
            <div class="modal-body">
                <div class="form-section">
                    <div class="row">
                        <dl class="row">
                            <dt class="col-sm-6">
                                First Name:
                            </dt>
                            <dd class="col-sm-6" id="firstNameD">

                            </dd>
                            <dt class="col-sm-6">
                                Last Name:
                            </dt>
                            <dd class="col-sm-6" id="lastNameD">

                            </dd>
                            <dt class="col-sm-6">
                                Email:
                            </dt>
                            <dd class="col-sm-6" id="emailD">

                            </dd>
                            <dt class="col-sm-6">
                                Phone:
                            </dt>
                            <dd class="col-sm-6" id="phoneD">

                            </dd>
                            <dt class="col-sm-6">
                                Position:
                            </dt>
                            <dd class="col-sm-6" id="positionD">

                            </dd>
                            <dt class="col-sm-6">
                                Department:
                            </dt>
                            <dd class="col-sm-6" id="departmentD">

                            </dd>
                            <dt class="col-sm-6">
                                Status:
                            </dt>
                            <dd class="col-sm-6" id="statusD">

                            </dd>
                        </dl>
                    </div>
                </div>
                
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-outline-danger" onclick="crudStaff(3)"><i class="bi bi-x-octagon-fill"></i> Delete</button>
            </div>
        </div>
    </div>

</div>


<div id="studiostaff" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="studiostaffLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg" >
        <div class="modal-content" role="document">
            <div class="modal-header page-card-header">
                <h2>Manage Studios for <span id="staffNameHeader"></span></h2>
                <span class="close" data-bs-dismiss="modal">&times;</span>
            </div>
            <div class="modal-body">
                <input type="hidden" id="currentStaffId" />

                <!-- Add/Edit Assignment Section -->
                <div class="card mb-3">
                    <div class="card-header text-white page-card-header">
                        <h5 class="mb-0"><span id="assignmentFormTitle">Add Studio Assignment</span></h5>
                    </div>
                    <div class="card-body">
                        <input type="hidden" id="assignmentAction" value="1" />
                        <div class="form-section">
                            <div class="row">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label">Studio *</label>
                                        <select class="form-select" id="studioSelect">
                                            <option value="">Select Studio</option>
                                        </select>
                                        <span id="validateStudio" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label">Role *</label>
                                        <select class="form-select" id="roleSelect">
                                            <option value="">Select Role</option>
                                        </select>
                                        <span id="validateRole" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label">Start Date *</label>
                                        <input type="date" class="form-control inputsmmodal" id="startDate" />
                                        <span id="validateStartDate" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="col-6">
                                    <div class="mb-3">
                                        <label class="form-label">End Date</label>
                                        <input type="date" class="form-control inputsmmodal" id="endDate" />
                                    </div>
                                </div>

                            </div>

                            <button class="btn btn-outline-success w-100" onclick="saveStudioStaffAssignment()">
                                <i class="bi bi-save"></i> Save
                            </button>
                        </div>
                        
                        
                    </div>
                </div>

                <!-- Current Assignments Grid -->
                <div class="card">
                    <div class="card-header text-white page-card-header">
                        <h5 class="mb-0">Current Assignments</h5>
                    </div>
                    <div class="card-body">
                        <div id="studioStaffGrid" class="ag-theme-balham"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- End Modals Create Edit and Delete Staff-->

<script>
    window._csrfToken = $('@Html.AntiForgeryToken()').val();
    urlIndex = '/CMN/Staff';
