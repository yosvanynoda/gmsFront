</div>

<!-- Chart.js Library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<script>
    // Studies by Status - Pie Chart
    const studiesStatusCtx = document.getElementById('studiesStatusChart').getContext('2d');
    new Chart(studiesStatusCtx, {
        type: 'doughnut',
        data: {
            labels: ['Active', 'Recruiting', 'Completed', 'On Hold', 'Planning'],
            datasets: [{
                label: 'Studies',
                data: [8, 6, 5, 3, 2],
                backgroundColor: [
                    'rgba(40, 167, 69, 0.8)',
                    'rgba(0, 123, 255, 0.8)',
                    'rgba(23, 162, 184, 0.8)',
                    'rgba(255, 193, 7, 0.8)',
                    'rgba(108, 117, 125, 0.8)'
                ],
                borderColor: [
                    'rgba(40, 167, 69, 1)',
                    'rgba(0, 123, 255, 1)',
                    'rgba(23, 162, 184, 1)',
                    'rgba(255, 193, 7, 1)',
                    'rgba(108, 117, 125, 1)'
                ],
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'right',
                    labels: {
                        padding: 15,
                        font: {
                            size: 12
                        }
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let label = context.label || '';
                            if (label) {
                                label += ': ';
                            }
                            label += context.parsed + ' studies';
                            return label;
                        }
                    }
                }
            }
        }
    });

    // Patients Enrolled by Studies - Bar Chart
    const patientsEnrolledCtx = document.getElementById('patientsEnrolledChart').getContext('2d');
    new Chart(patientsEnrolledCtx, {
        type: 'bar',
        data: {
            labels: ['CARDIO-2024-01', 'NEURO-2024-03', 'ONCO-2024-02', 'RESP-2024-04', 'ENDO-2024-05'],
            datasets: [{
                label: 'Enrolled Patients',
                data: [45, 38, 32, 28, 24],
                backgroundColor: [
                    'rgba(102, 126, 234, 0.8)',
                    'rgba(118, 75, 162, 0.8)',
                    'rgba(237, 100, 166, 0.8)',
                    'rgba(255, 154, 0, 0.8)',
                    'rgba(46, 213, 115, 0.8)'
                ],
                borderColor: [
                    'rgba(102, 126, 234, 1)',
                    'rgba(118, 75, 162, 1)',
                    'rgba(237, 100, 166, 1)',
                    'rgba(255, 154, 0, 1)',
                    'rgba(46, 213, 115, 1)'
                ],
                borderWidth: 2,
                borderRadius: 5
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 10
                    },
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)'
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.parsed.y + ' patients enrolled';
                        }
                    }
                }
            }
        }
    });
</script>
